  email = petar.p.kirov@gmail.com
  name = Petar Kirov
[fetch]
  prune = true
[rebase]
  updateRefs = true
[pull]
  ff = true
  rebase = false
[merge]
  ff = only
[include]
  path = git/aliases.gitconfig
  path = git/delta.gitconfig
[difftool "nvimdiff"]
  cmd = nvim -d \"$LOCAL\" \"$REMOTE\"
[diff]
  colorMoved = dimmed-zebra
